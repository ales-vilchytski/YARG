<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:id="@+id/number_field_view_label"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:layout_marginStart="@dimen/view_horizontal_margin"
        android:layout_marginEnd="@dimen/view_horizontal_margin"
        android:text="label"/>
    <EditText
        android:id="@+id/number_field_view_edit"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:paddingLeft="@dimen/view_horizontal_margin"
        android:inputType="number"
        android:layout_weight="1"
        android:text="0"/>

</LinearLayout>